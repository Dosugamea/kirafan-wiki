{
  "name": "wiki",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "sitemap_fetch": "curl 'https://database.kirafan.cn/wiki_kirafan_moe_sitemap.xml' > dist/sitemap.xml"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.4.3",
    "echarts": "^4.5.0",
    "idb-keyval": "^3.2.0",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-google-adsense": "^1.8.0",
    "vue-i18n": "^8.0.0",
    "vue-infinite-scroll": "^2.0.2",
    "vue-router": "^3.1.3",
    "vue-script2": "^2.1.0",
    "vuetify": "^2.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-plugin-pwa": "^4.1.2",
    "@vue/cli-plugin-router": "^4.1.1",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.5.0",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-cli-plugin-pug": "^1.0.7",
    "vue-cli-plugin-vuetify": "^2.0.2",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 1,
      "semi": [
        1,
        "always"
      ],
      "quotes": [
        1,
        "single"
      ],
      "no-var": 1,
      "no-case-declarations": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "src/Clea/lib/cleaplayer.js",
    "public/js/live2dcubismcore.min.js"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "(src|public)/*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add "
    ],
    "*": [
      "git add "
    ]
  }
}